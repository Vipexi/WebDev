/* Class Selector
.first-p {
    font-size: 15px;
    /*Cool font yeah*/
    color:white;
}
/*Id Selector*/
#main-heading-cool-styling {
    transform: skew(20deg);
    background-color: white;
    font-size: 30px;
}

/*Attribute Selector*/
/*a[href="index.html"] {
    font-weight: bold;
}*/

input[type="text"] {
    background: violet;
    padding: 12px;
    border: 0px;
    border-radius: 8px;
    color: black;
}

